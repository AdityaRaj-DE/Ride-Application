const jwt = require('jsonwebtoken');

exports.protect = (req, res, next) => {
  try {
    const header = req.headers.authorization;
    if (!header || !header.startsWith('Bearer ')) return res.status(401).json({ message: 'No token provided' });
    const token = header.split(' ')[1];
    const decoded = jwt.verify(token, process.env.JWT_SECRET || 'goodkeymustchange');
    req.user = decoded; // must contain id property (Auth service should issue { id: user._id, ... })
    next();
  } catch (err) {
    console.error('auth middleware error', err.message);
    return res.status(401).json({ message: 'Invalid token' });
  }
};